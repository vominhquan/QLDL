<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Shadow" TargetType="{x:Type StackPanel}">
        <Setter Property="Background" Value="{StaticResource StackPanelBackground}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect 
                        Color="#FF000000" 
                        Direction="0" 
                        ShadowDepth="0" 
                        Opacity="0.5" 
                        BlurRadius="8"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>