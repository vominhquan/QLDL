<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:_="clr-namespace:System;assembly=mscorlib">
    <_:Double x:Key="Scale">1</_:Double>
    <_:Double x:Key="Size">50</_:Double>
    <_:Double x:Key="FontSize">20</_:Double>
        
    <Color x:Key="Background">#ff227447</Color>
    <SolidColorBrush x:Key="BackgroundSolid" Color="{StaticResource Background}"/>
    <Color x:Key="Foreground">#ffffffff</Color>
    <SolidColorBrush x:Key="ForegroundSolid" Color="#ffffff"/>
    
    <SolidColorBrush x:Key="WhiteLineColor" Color="#88ffffff"/>
    <SolidColorBrush x:Key="GrayLineColor" Color="#7c8086"/>
    <SolidColorBrush x:Key="BlueLineColor" Color="#007acc"/>

    <Color x:Key="HeaderBackground">#d2d2d2</Color>
    <Color x:Key="HeaderBackgroundHover">#d3f0e0</Color>
        
    <SolidColorBrush x:Key="TableHeaderColor" Color="#217346"/>
    <SolidColorBrush x:Key="TableHeaderBackground" Color="#d2d2d2"/>
    <SolidColorBrush x:Key="TableHeaderBackgroundHover" Color="#27ae60"/>

    <_:Double x:Key="TableFontSize">15</_:Double>

    <FontFamily x:Key="TextFont">\Resources\Fonts\#Segoe UI Light</FontFamily>
    <!--<FontFamily x:Key="IconFont">aicon</FontFamily>-->
    <FontFamily x:Key="IconFont">\Resources\Fonts\#aicon</FontFamily>
</ResourceDictionary>